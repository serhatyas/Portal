@model Portal.Models.ServiceModelDB.ServiceModel
@using Portal.Models.EntityFramework
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="column-selectors">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Envanter Listesi</h4>
                </div>
                <div class="card-content">
                    <div class="card-body card-dashboard">
                        <div class="d-flex justify-content-end m-r-10">
                            <a href="/DataProcessing/Save" class="btn btn-success pull-right">Yeni Envanter Ekle</a>

                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped dataex-html5-selectors">
                                <thead>
                                    <tr>
                                        <th>Envanter Kodu</th>
                                        <th>Fatura Numarası</th>
                                        <th>Envanter Adı</th>
                                        <th>Tarih</th>
                                        <th colspan="3">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.inventoryTransactionsList)
                                    {
                                    <tr>
                                        <td> <a style="text-decoration:underline" href="/DataProcessing/details?inventoryCode=@item.InventoryCode">@item.InventoryCode</a> </td>
                                        <td>@item.InvoiceNo</td>
                                        <td>@item.InventoryName</td>
                                        <td>@item.CreateDate.Value.ToShortDateString()</td>
                                        <td><a class="btn btn-primary" href="/DataProcessing/save/@item.ID">Düzenle</a></td>
                                        @if (item.IsPassive == true)
                                        {
                                            <td><button class="btn btn-primary btnDelete" data-id="@item.ID" type="button" data-url="/DataProcessing/isPassive">Aktif Et</button></td>

                                        }
                                        else
                                        {
                                            <td><button class="btn btn-danger btnDelete" data-id="@item.ID" type="button" data-url="/DataProcessing/isPassive">Pasif Et</button></td>

                                        }
                                        <td><button class="btn btn-danger btnDelete" data-id="@item.ID" type="button" data-url="/DataProcessing/delete">Sil</button></td>
                                    </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Envanter Kodu</th>
                                        <th>Fatura Numarası</th>
                                        <th>Envanter Adı</th>
                                        <th colspan="3">İşlemler</th>
                                    </tr>
                                </tfoot>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


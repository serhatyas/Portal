@model Portal.Models.ServiceModelDB.ServiceModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departman Oluştur</h2>

<div class="container-fluid">
    <div class="col-12">
        <form action="/Department/Create" method="post" class="col-md-12">
            <div class="row">
                <div class="col-12">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Kişi Seçiniz</label>
                            @Html.DropDownListFor(x => x.seniorDepartment.SystemUserID, new SelectList(Model.SystemUserList, "ID", "Name"), "Şef Seçiniz", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.SystemUser.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Departman Adı</label>
                        @Html.TextBoxFor(x => x.department.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.department.Name)
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success" type="submit">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>



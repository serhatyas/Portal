@model Portal.Models.ServiceModelDB.ServiceModel
@using Portal.Models.EntityFramework

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Değer Ekle</h2>

<div class="container-fluid">
    <div class="col-12">
        <form action="/Value/Save" method="post" class="col-md-12">
            @Html.HiddenFor(x => x.Value.ID)
            <div class="row">
                <div class="col-12">
                    <div class="col-12">
                        <div class="form-group">
                            <label>Tipler</label>
                            @Html.DropDownListFor(x => x.Value.TypeID, new SelectList(Model.TypeList, "Id", "Name"), "Tip Seçiniz", new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(x => x.Type.Name)
                        </div>                       
                        <div class="form-group">
                            <label>Değer Adı</label>
                            @Html.TextBoxFor(x => x.Value.Name, new { @class = "form-control",  required = "required" })
                            @Html.ValidationMessageFor(x => x.Value.Name)
                        </div>

                    </div>
                </div>
                <div class="col-12">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-success" type="submit">Kaydet</button>
                    </div>
                </div>
            </div>


        </form>
    </div>
</div>
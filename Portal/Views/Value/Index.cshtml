@model Portal.Models.ServiceModelDB.ServiceModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-end m-r-10">
    <a href="/Value/Save" class="btn btn-success pull-right">Değer Ekle</a>

</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Tip</th>
            <th>Değer</th>
            <th>Tarih</th>
            <th colspan="2">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ValueList.OrderByDescending(x => x.Date))
        {

            var type = Model.TypeList.FirstOrDefault(x => x.ID == item.TypeID);
            <tr>
                <td>@type.Name</td>
                <td>@item.Name</td>
                <td>@item.Date.Value.ToString("dd-MM-yyyy hh:mm")</td>
                <td><a class="btn btn-primary" href="/Value/Save/@item.ID">Düzenle</a></td>
                <td><button class="btn btn-danger btnDelete" data-id="@item.ID" data-url="/Value/delete">Sil</button></td>
            </tr>
        }

    </tbody>

</table>